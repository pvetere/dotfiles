#!/bin/sh

#xrandr --output eDP-1 --primary --mode 1920x1080 --rotate normal --pos 320x1440 --output HDMI-1 --mode 2560x1440 --rotate normal --pos 0x0 --verbose
xrandr \
    --output eDP-1  --mode 1920x1080 --rotate normal --pos 640x1440 --primary \
    --output DP-3-1 --mode 2560x1440 --rotate normal --pos 0x0                \
    --output DP-3-2 --mode 2560x1440 --rotate left   --pos 2560x0             \
    --verbose

bspc monitor eDP-1  -d I II III IV V
bspc monitor DP-3-1 -d VI VII VIII
bspc monitor DP-3-2 -d IX X

#pkill picom
#picom --experimental-backends -b

~/.config/polybar/launch.sh

