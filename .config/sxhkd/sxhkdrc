# terminal emulator
super + Return
	terminator

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# restart bspwm
super + alt + r
	bspc wm -r

# close and kill
super + F4
	bspc node -c

# focus the next/previous desktop in the current monitor
super + {Left,Right}
	bspc desktop -f {prev,next}

super + {1,2,3,4,5,6,7,8,9,0}
    bspc desktop -f {I,II,III,IV,V,VI,VII,VIII,IX,X}

